<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/colorFormMasterElementBackground"
    android:layout_width="match_parent"
    android:id="@+id/itemContainer"
    android:layout_height="wrap_content">


    <LinearLayout
        android:id="@+id/layoutRow"
        android:layout_width="match_parent"
        android:layout_height="70sp"
        android:orientation="horizontal">

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/formElementTitle"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_marginLeft="5sp"
            android:layout_weight="2"
            android:fontFamily="sans-serif-thin"
            android:gravity="center_vertical"
            android:textColor="@color/colorFormMasterElementTextTitle"
            android:textSize="14sp"
            android:textStyle="bold"
            tools:text="Personal Info" />

        <it.starksoftware.ssform.StarkSpinner.StarkSpinner
            android:id="@+id/formElementValue"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_gravity="center_vertical"
            android:layout_weight="3"
            app:ShowBorders="true"
            app:BordersSize="1dp"
            app:ItemsDivider="@color/colorFormMasterDivider"
            app:DividerHeight="0.5dp"
            app:RevealEmptyText="@string/touch_to_select"
            app:BoarderColor="@color/colorFormMasterDivider"
            android:gravity="end|center_vertical" />

    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:layout_marginBottom="2dp"
        android:layout_marginLeft="16dp"
        android:layout_marginTop="2dp"
        android:background="@color/colorFormMasterDivider" />

</LinearLayout>